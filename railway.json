{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn web_app:web_app --bind 0.0.0.0:$PORT --workers 2 --timeout 120 --preload --access-logfile - --error-logfile - --log-level debug",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
